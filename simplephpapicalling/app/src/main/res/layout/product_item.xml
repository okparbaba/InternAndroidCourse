<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvProductName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="29dp" android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvProductDesc" app:layout_constraintEnd_toEndOf="@+id/tvProductName"
            app:layout_constraintStart_toStartOf="@+id/tvProductName" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProductName"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvProductPrice" app:layout_constraintEnd_toEndOf="@+id/tvProductDesc"
            app:layout_constraintStart_toStartOf="@+id/tvProductDesc"
            app:layout_constraintHorizontal_bias="0.486" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProductDesc"/>
</android.support.constraint.ConstraintLayout>