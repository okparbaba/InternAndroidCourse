<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostCreateActivity">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etProductName" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="ProductName"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/progressBar2"
            app:layout_constraintVertical_bias="0.13999999"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etProductDesc"
            app:layout_constraintStart_toStartOf="@+id/etProductName"
            app:layout_constraintEnd_toEndOf="@+id/etProductName"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etProductName"
            android:hint="Description"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Price"
            android:ems="10"
            android:id="@+id/etProductPrice"
            app:layout_constraintStart_toStartOf="@+id/etProductDesc"
            app:layout_constraintEnd_toEndOf="@+id/etProductDesc"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etProductDesc"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Category Id"
            android:ems="10"
            android:id="@+id/etProductCategoryId"
            app:layout_constraintStart_toStartOf="@+id/etProductPrice"
            app:layout_constraintEnd_toEndOf="@+id/etProductPrice"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etProductPrice"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etProductCreateDate"
            app:layout_constraintStart_toStartOf="@+id/etProductCategoryId"
            app:layout_constraintEnd_toEndOf="@+id/etProductCategoryId"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etProductCategoryId"
            android:hint="CreateDate"/>
    <Button
            android:text="Post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPost" app:layout_constraintStart_toStartOf="@+id/etProductCreateDate"
            app:layout_constraintEnd_toEndOf="@+id/etProductCreateDate" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/etProductCreateDate"/>
</android.support.constraint.ConstraintLayout>